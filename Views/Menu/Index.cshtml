@model List<food_menu.Models.Dish>

@{
    ViewData["Title"] = "Menu";
}

<div class="container">
    <div class="row">
        @if (Model != null && Model.Any())
        {
            @foreach (var dish in Model)
            {
                <div class="col-6">
                    <h3>@dish.Name</h3>
                    <p>Price: @dish.Price</p>
                </div>
            }
        }
        else
        {
            <p>No dishes available.</p>
        }
    </div>
</div>
