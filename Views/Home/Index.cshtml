@model List<food_menu.Models.Dish>

<h2>Menu</h2>

<form method="get">
    <input type="text" name="searchString" placeholder="Search dish..." />
    <button type="submit">Search</button>
</form>

@if (Model.Any())
{
    <ul>
        @foreach (var dish in Model)
        {
            <li>
                <a href="@Url.Action("Details", "Menu", new { id = dish.Id })">
                    @dish.Name (@dish.Price €)
                </a>
                <ul>
                    @foreach (var di in dish.DishIngredients)
                    {
                        <li>@di.Ingredient.Name</li>
                    }
                </ul>
            </li>
        }
    </ul>
}
else
{
    <p>No dishes found.</p>
}
